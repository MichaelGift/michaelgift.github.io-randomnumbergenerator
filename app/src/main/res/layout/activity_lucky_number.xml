<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LuckyNumberActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="193dp"
        android:layout_marginBottom="31dp"
        android:gravity="center"
        android:text="Your Lucky Number Is:"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/TxtLuckyNumberOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TxtLuckyNumberOutput"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginBottom="39dp"
        android:gravity="center"
        android:text="0"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/BtnShareMyLuck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/BtnShareMyLuck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="320dp"
        android:text="Share My Luck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/TxtLuckyNumberOutput"
        app:layout_constraintTop_toBottomOf="@+id/TxtLuckyNumberOutput" />
</androidx.constraintlayout.widget.ConstraintLayout>